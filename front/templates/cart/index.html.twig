{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block content %}
    <style>
        body {
            background-color: #f4f7f6;
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        }

        .page-wrapper {
            padding: 20px;
        }

        .cart {
            margin: 20px 0;
        }

        .cart .cart-header, .cart .cart-body, .cart .cart-footer {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .cart-header {
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .cart-header h2 {
            margin: 0;
        }

        .cart-header a {
            color: #007bff;
            text-decoration: none;
        }

        .cart-body .cart-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
        }

        .cart-body .cart-item:last-child {
            border-bottom: none;
        }

        .cart-item img {
            width: 100px;
            border-radius: 8px;
        }

        .cart-item .item-info {
            flex: 1;
            margin-left: 20px;
        }

        .cart-item .item-info h5 {
            margin: 0 0 10px 0;
        }

        .cart-item .item-info p {
            margin: 0 0 5px 0;
            color: #777;
        }

        .cart-item .item-actions {
            text-align: right;
        }

        .cart-item .item-actions .price {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .cart-item .item-actions .quantity {
            display: flex;
            align-items: center;
        }

        .cart-item .item-actions .quantity input {
            width: 50px;
            text-align: center;
            border: 1px solid #ddd;
            margin: 0 5px;
        }

        .cart-item .item-actions .quantity a {
            color: #007bff;
            text-decoration: none;
            font-size: 1.2rem;
            margin: 0 5px;
        }

        .cart-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-top: 1px solid #ddd;
            padding-top: 20px;
        }

        .cart-footer .total {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .cart-footer .btn {
            padding: 10px 20px;
            border-radius: 4px;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

        .btn-primary:hover,
        .btn-danger:hover {
            opacity: 0.8;
        }

        .empty-cart {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 70vh;
            text-align: center;
        }

        .empty-cart h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .empty-cart p {
            font-size: 1.2rem;
            margin-bottom: 20px;
        }

        .empty-cart .btn {
            font-size: 1.2rem;
        }
    </style>

    <main class="page-wrapper">
        {% if panier|length > 0 %}
            <div class="container cart">
                <div class="cart-header">
                    <h2>Mon Panier</h2>
                    <a href="{{ path('homepage') }}">Ajouter d'autres articles</a>
                </div>
                <div class="cart-body">
                    {% set total = 0 %}
                    {% set totalProduit = 0 %}
                    {% for item in panier %}
                        {% set total = total + (item.product.prix * item.quantity) %}
                        {% set totalProduit = totalProduit + item.quantity %}
                        <div class="cart-item">
                            {% set principalImage = item.product.images | filter(image => image.principal == 1) | first %}
                            {% if principalImage is defined %}
                                
                            {% else %}
                                
                            {% endif %}
                            <div class="item-info">
                                <h5>{{ item.product.nom }}</h5>
                                <p>{{ item.product.description }}</p>
                                <p>Stock : {% if item.product.stock > 0 %}{{ item.product.stock }} produit(s){% else %}Épuisé{% endif %}</p>
                            </div>
                            <div class="item-actions">
                                <div class="price">{{ item.product.prix * item.quantity }} €</div>
                                <div class="quantity">
                                    <a href="{{ path('cart_decrease', {id: item.product.id}) }}" data-decrement>-</a>
                                    <input type="number" value="{{ item.quantity }}" readonly>
                                    <a href="{{ path('cart_increase', {id: item.product.id}) }}" data-increment>+</a>
                                </div>
                                <a class="btn btn-danger" href="{{ path('cart_remove', {id: item.product.id}) }}">Supprimer</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="cart-footer" style="margin-top: 30px">
                    <div class="total">Total: {{ total }} €</div>
                    <div>
                        <a class="btn btn-primary" href="{{ path('order_index') }}">Valider mon panier</a>
                        <a class="btn btn-danger" href="{{ path('cart_removeAll') }}">Annuler mon panier</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="container empty-cart">
                <div class="text-center">
                    <h1 class="display-5">Votre Panier est vide</h1>
                    <p class="fs-lg pb-2 pb-md-0 mb-4 mb-md-5">Commencez votre shopping dès maintenant à travers nos articles</p>
                    <a class="btn btn-lg btn-primary" href="{{ path('homepage') }}">Voir les produits</a>
                </div>
            </div>
        {% endif %}
    </main>
{% endblock %}
