{% extends 'base.html.twig' %}

{% block title %}Profil mdp{% endblock %}

{% block content %}

<style>
    .form-container {
      width: 60%;
      margin: 0 auto;
      background: #f6f6f6;
      border: 1px solid #ddd;
      padding: 20px;
      border-radius: 8px;
    }
    
    .form-group {
      margin-bottom: 20px;
    }
    
    .form-group label {
      font-weight: bold;
      display: block;
    }
    
    .form-group input {
      width: 100%;
      padding: 10px;
      border-radius: 4px;
      border: 1px solid #ccc;
    }
    
    .form-group button {
      padding: 10px 20px;
      background-color: #007bff;
      border: none;
      color: white;
      border-radius: 4px;
      cursor: pointer;
    }
  
    .form-group button:hover {
      background-color: #0056b3;
    }
  </style>
  
  <div class="form-container">
    <h1>Ancien mot de passe</h1>
    <form method="post">
      <div class="form-group">
          {{ form_start(formMdp) }}
        <label>Ancien mot de passe :</label>
        {{ form_widget(formMdp.plainPassword_old) }}
      </div>
      <hr>
      <h1>Nouveau mot de passe</h1>
      <div class="form-group">
        <label>Nouveau mot de passe :</label>
        {{ form_widget(formMdp.plainPassword) }}
      </div>
      <div class="form-group">
        {{ form_widget(formMdp.submit) }}
          {{ form_end(formMdp) }}
      </div>
    </form>
  </div>
  

{% endblock %}