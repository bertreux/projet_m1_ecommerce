<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
        <script src="{{ asset('js/script.js') }}"></script>
        <style>
            #menu {
                background-color: #fff;
                padding: 20px;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                margin: 20px 0;
                display: none; /* Hidden by default */
            }

            .search {
                margin-bottom: 15px;
            }

            .search label {
                font-weight: bold;
                margin-bottom: 5px;
                display: block;
            }

            .search input,
            .search select {
                width: 100%;
                padding: 10px;
                margin-top: 5px;
                border: 1px solid #ddd;
                border-radius: 4px;
            }

            .search .input-group {
                display: flex;
                align-items: center;
            }

            .search .input-group input {
                flex: 1;
            }

            .search .input-group span {
                padding: 10px;
                background-color: #f8f9fa;
                border: 1px solid #ddd;
                border-left: none;
                border-radius: 0 4px 4px 0;
            }

            .search button {
                width: 48%;
                padding: 10px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }

            .search button.btn-primary {
                background-color: #007bff;
                color: white;
                margin-right: 4%;
            }

            .search button.btn-secondary {
                background-color: #6c757d;
                color: white;
                height: 44px; /* Height for the reset button */
            }
        </style>
    </head>
    <body>
        <div id="main">
            <div class="bg-dark display-table sticky-top">
                <nav class="navbar navbar-expand navbar-dark container justify-content-between">
                    <span class="navbar-brand fs-3 me-auto">
                        <h5><a class="noLink" href="{{ path('homepage') }}">Shopy</a></h5>
                    </span>
                    <ul class="navbar-nav">
                        <li class="nav-item mx-3">
                            {% if lsession is defined %}
                                {% if lsession and lsession is null or lsession == [] %}
                                    <a href="{{ path('cart_index') }}"><i class="bi bi-cart-fill noLink"></i></a>
                                {% else %}
                                    <div class="notification">
                                        <span class="notification-badge"></span>
                                        <a href="{{ path('cart_index') }}"><i class="bi bi-cart-fill noLink"></i></a>
                                    </div>
                                {% endif %}
                            {% else %}
                                <div class="notification">
                                    <a href="{{ path('cart_index') }}"><i class="bi bi-cart-fill noLink"></i></a>
                                </div>
                            {% endif %}
                        </li>
                    </ul>
                    {% if form is defined %}
                        <ul class="navbar-nav">
                            <li class="navbar-item mx-3">
                                <i id="menuButton" class="bi bi-zoom-in noLink" style="cursor: pointer;"></i>
                            </li>
                        </ul>
                    {% endif %}
                    <ul class="navbar-nav">
                        <li class="navbar-item mx-3">
                            <a href="{{ path('app_login') }}"><i class="bi bi-person-circle noLink border-white"></i></a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div id="menu" class="hidden" style="left: -300;margin-left: -200;margin-left: 0px;left: 1500px;top: 50px;">
                {% if form is defined %}
                    {{ form_start(form) }}
                        <div class="search">
                            <label for="findTextBy">Recherche par titre</label>
                            {{ form_widget(form.findTextBy) }}
                        </div>
                        <div class="search">
                            <label for="titre">Titre</label>
                            {{ form_widget(form.titre) }}
                        </div>
                        <div class="search">
                            <label for="findTextBy2">Recherche par description</label>
                            {{ form_widget(form.findTextBy2) }}
                        </div>
                        <div class="search">
                            <label for="description">Description</label>
                            {{ form_widget(form.description) }}
                        </div>
                        {% if form.category is defined %}
                            <div class="search">
                                <label for="category">Par catégorie</label>
                                {{ form_widget(form.category) }}
                            </div>
                        {% endif %}
                        <div class="search">
                            <label for="prix_min">Prix minimum</label>
                            <div class="input-group">
                                {{ form_widget(form.prix_min) }}
                                <span>€</span>
                            </div>
                        </div>
                        <div class="search">
                            <label for="prix_max">Prix maximum</label>
                            <div class="input-group">
                                {{ form_widget(form.prix_max) }}
                                <span>€</span>
                            </div>
                        </div>
                        <div class="search">
                            <label for="stock">Uniquement en stock</label>
                            {{ form_widget(form.stock) }}
                        </div>
                        <hr>
                        <div class="search">
                            <label for="trie">Trier par</label>
                            {{ form_widget(form.trie) }}
                            {{ form_widget(form.trieSens) }}
                        </div>
                        <div class="search d-flex justify-content-between">
                            {{ form_widget(form.submitSearch, {'attr': {'class': 'btn btn-primary'}}) }}
                            {{ form_widget(form.ReniSearch, {'attr': {'class': 'btn btn-secondary', 'style': 'height: 44px;'}}) }}
                        </div>
                    {{ form_end(form) }}
                {% endif %}
            </div>
            {% include '_partials/_flash.html.twig' %}
            <div class="px-3">
                {% block content %}{% endblock %}
            </div>
            <footer id="footerSite" class="bg-light text-center text-lg-start d-flex justify-content-between align-items-center">
                <div class="text-center p-3">
                    <a class="text-dark" href="{{ path('app_contact') }}">CGU - Mentions Légales - Contact</a>
                </div>
                <div class="text-center p-3 ms-auto">
                    <a class="text-dark" href="https://www.facebook.com/h3hitema/"><i class="bi bi-facebook"></i></a>
                </div>
                <div class="text-center p-3">
                    <a class="text-dark" href="https://www.instagram.com/h3hitema/"><i class="bi bi-instagram"></i></a>
                </div>
                <div class="text-center p-3">
                    <a class="text-dark" href="https://fr.linkedin.com/school/h3hitema/"><i class="bi bi-linkedin"></i></a>
                </div>
            </footer>
        </div>
        <script>
            document.getElementById("menuButton").addEventListener("click", function() {
                var menu = document.getElementById("menu");
                if (menu.classList.contains("hidden")) {
                    menu.classList.remove("hidden");
                    menu.style.display = "block";
                } else {
                    menu.classList.add("hidden");
                    menu.style.display = "none";
                }
            });
        </script>
    </body>
</html>
