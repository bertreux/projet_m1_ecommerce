{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <h1>Image</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ image.url }}</td>
            </tr>
            <tr>
                <th>Principal</th>
                <td>{{ image.principal ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_image_index') }}" class="btn btn-secondary mt-2">retour a la liste</a>

    <a href="{{ path('app_image_edit', {'id': image.id}) }}" class="btn btn-warning">edit</a>

    {{ include('image/_delete_form.html.twig') }}
{% endblock %}
