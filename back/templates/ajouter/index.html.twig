{% extends 'base.html.twig' %}

{% block title %}Ajouter index{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/script.js') }}"></script>
    <script src="{{ asset('js/e_commerce.js') }}"></script>
{% endblock %}

{% block body %}
    <h1>Ajouter index</h1>
    <input type="hidden" id="NomObjet" value="Ajouter">
    <input type="hidden" id="Url" value="{{ path('app_fetch_tableau') }}">
    <table class="table" id="myTable">
        <thead>
            <tr>
                <td class="no-sort colloneTable"><input id="checkboxAll" type="checkbox" onchange="selectAll(this)"></td>
                <th>Id</th>
                <th>Qte</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ajouter in ajouters %}
            <tr>
                <td><input type="checkbox" onchange="selectOne()"></td>
                <td>{{ ajouter.id }}</td>
                <td>{{ ajouter.qte }}</td>
                <td>{{ ajouter.date ? ajouter.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_ajouter_show', {'id': ajouter.id}) }}" class="btn btn-info">show</a>
                    <a href="{{ path('app_ajouter_edit', {'id': ajouter.id}) }}" class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ajouter_new') }}" class="btn btn-primary">Cr√©er un nouveau</a>
    <button id="btn-delete-row" style="display: none" onclick="deleteRows()" class="btn btn-danger">Supprimer</button>
{% endblock %}
