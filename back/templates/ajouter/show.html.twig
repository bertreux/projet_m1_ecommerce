{% extends 'base.html.twig' %}

{% block title %}Ajouter{% endblock %}

{% block body %}
    <h1>Ajouter</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ajouter.id }}</td>
            </tr>
            <tr>
                <th>Qte</th>
                <td>{{ ajouter.qte }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ ajouter.date ? ajouter.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Produit Id</th>
                <td>{{ ajouter.produit }}</td>
            </tr>
            <tr>
                <th>Commande ID</th>
                <td>{{ ajouter.commande }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ajouter_index') }}" class="btn btn-secondary mt-2">retour a la liste</a>

    <a href="{{ path('app_ajouter_edit', {'id': ajouter.id}) }}" class="btn btn-warning">edit</a>

    {{ include('ajouter/_delete_form.html.twig') }}
{% endblock %}
