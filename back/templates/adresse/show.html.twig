{% block body %}
    <h1>Adresse</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ adresse.id }}</td>
            </tr>
            <tr>
                <th>Intitule</th>
                <td>{{ adresse.intitule }}</td>
            </tr>
            <tr>
