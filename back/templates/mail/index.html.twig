{% endblock %}

{% block body %}
    <h1>Mail index</h1>

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Objet</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mail in mails %}
            <tr>
                <td>{{ mail.id }}</td>
                <td>{{ mail.objet }}</td>
                <td>{{ mail.text }}</td>
                <td>
                    <a href="{{ path('app_mail_show', {'id': mail.id}) }}" class="btn btn-info">show</a>
